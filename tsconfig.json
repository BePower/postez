{
  "compilerOptions": {
    "types": ["node"],
    "outDir": "./dist",
		"declarationDir": "./dist/types/",
    "module": "commonjs",
    "target": "es2019",
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": true,
    "listFiles": false,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true
  },
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
