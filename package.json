{
  "name": "@danielivanovz/postez",
  "version": "1.0.1",
  "description": "Utility tool for dynamically generate interfaces from PostgreSQL",
  "main": "index.js",
  "scripts": {
    "dev": "npm run nodemon",
    "build": "npm run build:prod && npm run copy",
    "build:prod": "tsc --build",
    "build:dev": "tsc --build --watch",
    "clean": "rimraf dist",
    "copy": "cp -R sql dist",
    "start": "npm run dev",
    "prebuild": "npm run format && npm run lint",
    "compile": "npm run format && npm run lint && npm run watch",
    "lint": "eslint --ext .js,.ts",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "nodemon": "nodemon dist/index.js",
    "watch": "npm run copy && tsc -w",
    "test": "exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielivanovz/postez.git"
  },
  "author": "Daniel Ivanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danielivanovz/postez/issues"
  },
  "publishConfig": {
    "@danielivanovz:registry": "https://npm.pkg.github.com"
  },
  "homepage": "https://github.com/danielivanovz/postez#readme",
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/prettier": "^2.6.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "pg-promise": "^10.11.1"
  }
}
